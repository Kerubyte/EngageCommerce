<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.kerubyte.engagecommerce.presentation.ui.fragment.title.TitleFragment"
        android:label="TitleFragment" >
        <action
            android:id="@+id/action_titleFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.kerubyte.engagecommerce.presentation.ui.fragment.detail.ProductDetailFragment"
        android:label="ProductDetailFragment" >
        <argument
            android:name="productUid"
            app:argType="string" />
    </fragment>
</navigation>